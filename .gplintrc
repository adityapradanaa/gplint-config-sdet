{
  "indentation": [
    "on",
    {
      "Feature": 0,
      "Background": 2,
      "Scenario": 2,
      "Step": 2,
      "Examples": 4,
      "example": 6,
      "given": 4,
      "when": 4,
      "then": 4,
      "and": 4,
      "but": 4,
      "feature tag": 0,
      "scenario tag": 2
    }
  ],
  "no-trailing-spaces": "on",
  "new-line-at-eof": [
    "on",
    "yes"
  ],
  "max-scenarios-per-file": [
    "on",
    {
      "maxScenarios": 10,
      "countOutlineExamples": true
    }
  ],
  "required-tags": [
    "on",
    {
      "feature": [
        "/@"
      ],
      "extendRule": false,
      "extendExample": true,
      "ignoreUntagged": false
    }
  ],
  "max-tags-lines": [
    "on",
    {
      "feature": 1,
      "scenario": 5,
      "example": 5
    }
  ],
  "name-length": [
    "on",
    {
      "Feature": 70,
      "Scenario": 70,
      "Step": 70
    }
  ],
  "no-dupe-scenario-names": [
    "on",
    "anywhere"
  ],
  "scenario-size": [
    "on",
    {
      "steps-length": {
        "Background": 15,
        "Scenario": 15
      }
    }
  ],
  "table-align": [
    "on",
    {
      "steps": true,
      "examples": true
    }
  ],
  "file-name": [
    "on",
    {
      "style": "snake_case"
    }
  ]
}
